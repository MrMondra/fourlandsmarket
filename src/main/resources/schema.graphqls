type Category {
    idCategory: ID!
    name: String!
    description: String
}

type Product {
    idProduct: ID!
    name: String!
    description: String
    price: Float
    stock: Int
    category: Category
}

type Promotion {
    idPromotion: ID!
    description: String
    discount: Float
    products: [Product]
    categories: [Category]
}

type Query {
    allPromotions: [Promotion],
    getProductByCategory(idCategory: Int!): [Product]
}
